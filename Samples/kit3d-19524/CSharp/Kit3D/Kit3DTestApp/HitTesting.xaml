    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid x:Name="LayoutRoot" Background="White">
        <Canvas Width="0" Height="0">
            <Canvas.Resources>
                <Storyboard x:Name="AnimationLoop" Duration="0:0:0.05" Completed="AnimationLoop_Completed">
