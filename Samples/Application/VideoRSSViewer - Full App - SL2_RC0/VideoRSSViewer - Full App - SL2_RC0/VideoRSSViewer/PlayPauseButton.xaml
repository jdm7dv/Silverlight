                            <GradientStop Color="#FF636A98" Offset="0"/>
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
            </Canvas>
            <Canvas x:Name="pauseFace" Canvas.Left="11" Canvas.Top="9" Opacity="1">
