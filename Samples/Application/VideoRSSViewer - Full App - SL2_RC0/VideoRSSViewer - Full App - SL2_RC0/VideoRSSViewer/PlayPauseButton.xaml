                            <GradientStop Color="#FF353A57" Offset="1"/>
                        </LinearGradientBrush>
                    </Path.Fill>
                </Path>
            </Canvas>
            <Canvas x:Name="stopFace" Canvas.Left="9.078" Canvas.Top="9" Opacity="0" >
