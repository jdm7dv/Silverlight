<UserControl x:Class="Resizer.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot" Background="Yellow" Width="400" Height="300">
    	<Rectangle HorizontalAlignment="Left" Margin="40,40,0,140" Width="120" Fill="#FFFFFFFF" Stroke="#FF000000"/>
    	<Ellipse HorizontalAlignment="Right" Margin="0,96,32,68" Width="152" Fill="#FFFFFFFF" Stroke="#FF000000"/>
        <Grid.RenderTransform>
            <ScaleTransform x:Name="MyScale"></ScaleTransform>
        </Grid.RenderTransform>
    </Grid>
    
</UserControl>
