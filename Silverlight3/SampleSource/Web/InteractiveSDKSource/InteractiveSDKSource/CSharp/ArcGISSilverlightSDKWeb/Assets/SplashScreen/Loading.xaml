				</LinearGradientBrush>
			</Grid.OpacityMask>
			<Grid.Clip>
				<RectangleGeometry Rect="0, 0, 345, 50" />
			</Grid.Clip>
			<TextBlock Foreground="White" x:Name="t0" Opacity="0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">Mapping</TextBlock>
