								<SplineDoubleKeyFrame KeyTime="0:0:06" Value="0"/>
								<SplineDoubleKeyFrame KeyTime="0:0:06.2" Value="1"/>
								<SplineDoubleKeyFrame KeyTime="0:0:06.7" Value="1"/>
