      <TextBlock Foreground="White" x:Name="t7" Opacity="0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">Sample code</TextBlock>
		</Grid>
    <StackPanel x:Name="t8" Opacity="0" VerticalAlignment="Top" Margin="30">
      <TextBlock Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center">ESRI - Mapping Our World</TextBlock>
      <TextBlock Foreground="White" FontSize="14" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">http://www.esri.com/Silverlight</TextBlock>
    </StackPanel>
    <TextBlock Foreground="White" x:Name="progressText" Margin="18,0,17,19" Height="26" Text="0%" FontSize="16" Opacity="0.8" VerticalAlignment="Bottom" TextAlignment="Left"/>
		<TextBlock Foreground="White" x:Name="progressText2" Margin="18,0,7,8" Height="70" Text="0%" FontSize="50" Opacity="0.04" FontWeight="Bold" VerticalAlignment="Bottom" TextAlignment="Left"/>
