					<BeginStoryboard>
						<Storyboard x:Name="FeaturesBanner" RepeatBehavior="Forever">
							<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="t0" Storyboard.TargetProperty="(UIElement.Opacity)">
								<SplineDoubleKeyFrame KeyTime="0:0:00" Value="0"/>
								<SplineDoubleKeyFrame KeyTime="0:0:00.2" Value="1"/>
								<SplineDoubleKeyFrame KeyTime="0:0:00.7" Value="1"/>
								<SplineDoubleKeyFrame KeyTime="0:0:00.999" Value="0"/>
							</DoubleAnimationUsingKeyFrames>
							<DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetName="t1" Storyboard.TargetProperty="(UIElement.Opacity)">
								<SplineDoubleKeyFrame KeyTime="0:0:01" Value="0"/>
