<Grid
	xmlns="http://schemas.microsoft.com/client/2007" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Cursor="Wait">
	<Grid Width="380" Height="256">
		<Grid.Clip>
			<RectangleGeometry Rect="0, 0, 380, 256" />
		</Grid.Clip>
