						</Storyboard>
					</BeginStoryboard>
				</EventTrigger>
			</Image.Triggers>
		</Image>
		<Grid Width="345" Height="50" Margin="18,17,17,0" VerticalAlignment="Top">
			<Grid.OpacityMask>
				<LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
					<GradientStop Color="#0000" Offset="0"/>
