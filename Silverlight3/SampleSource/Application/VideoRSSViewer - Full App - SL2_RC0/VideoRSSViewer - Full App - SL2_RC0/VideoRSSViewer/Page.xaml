<UserControl x:Class="VideoRSSViewer.Page"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:my="clr-namespace:VideoRSSViewer">
    <Grid x:Name="LayoutRoot" Background="#FF333333">
        <Canvas x:Name="VideoArea">
            <my:VideoPanel x:Name="myVideoPanel" Canvas.Top="10" Canvas.Left="340"/>
        </Canvas>
        <Rectangle x:Name="FullScreenRectangleBackground" Fill="Black" Visibility="Collapsed"/>
        <Rectangle x:Name="FullScreenRectangle"/>
    </Grid>
</UserControl>
