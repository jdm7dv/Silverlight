<Canvas
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Rectangle x:Name="Background" Canvas.Left="10" Canvas.Top="10" Width="300" Height="400" RadiusX="20" RadiusY="20">
		<Rectangle.Fill>
			<LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="0.4,1">
				<LinearGradientBrush.GradientStops>
					<GradientStop Color="LightBlue" Offset="0.0" />
					<GradientStop Color="Blue" Offset="1.0" />
				</LinearGradientBrush.GradientStops> 
			</LinearGradientBrush>
		</Rectangle.Fill>
		<Rectangle.Stroke>
				<LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="1.0,1.0">
					<LinearGradientBrush.GradientStops>
						<GradientStop x:Name="ButtonFrameOutStrokeColor1" Color="#7131" Offset="0.0" />
						<GradientStop x:Name="ButtonFrameOutStrokeColor2" Color="#3131" Offset="1.0" />
					</LinearGradientBrush.GradientStops> 
				</LinearGradientBrush>
		</Rectangle.Stroke>
	</Rectangle>
	<Rectangle Canvas.Left="11" Canvas.Top="11" Width="298" Height="398" RadiusX="19" RadiusY="19">
		<Rectangle.Stroke>
				<LinearGradientBrush SpreadMethod="Reflect" StartPoint="0,0" EndPoint="1.0,1.0">
					<LinearGradientBrush.GradientStops>
						<GradientStop Color="#cfff" Offset="0.0" />
						<GradientStop Color="#8fff" Offset="1.0" />
					</LinearGradientBrush.GradientStops> 
				</LinearGradientBrush>
		</Rectangle.Stroke>

	</Rectangle>
</Canvas>

