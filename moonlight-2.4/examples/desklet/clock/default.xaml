<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Desklet.VideoPlayer.VideoPlayer;assembly=bin/videoplayer.dll"
	Loaded="PageLoaded" Width="400" Height="400">

	<Rectangle Width="350" Height="30" Fill="Gray" RadiusX="15" RadiusY="15"/>

	<Rectangle Width="20" Height="20" Fill="Black" Canvas.Top="5" Canvas.Left="140" x:Name="Stop" RadiusX="2" RadiusY="2"/>

	<Canvas Width="18" Height="20" Canvas.Top="5" Canvas.Left="180" x:Name="Pause">
		<Rectangle Width="7" Height="20" Fill="Black" RadiusX="2" RadiusY="2"/>
		<Rectangle Width="7" Height="20" Fill="Black" Canvas.Left="11" RadiusX="2" RadiusY="2"/>
	</Canvas>

	<Polygon Fill="Black" Points="220,5 220,25 240,15" x:Name="Play"/>

	<MediaElement AutoPlay="True" x:Name="Video" Source="" Opacity="1.0" Canvas.Top="30" 
Canvas.Left="15"/>
</Canvas>
