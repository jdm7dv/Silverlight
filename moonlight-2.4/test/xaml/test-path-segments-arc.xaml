<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Path Stroke="Black" StrokeThickness="2">
	<Path.Data>
		<PathGeometry>
		<PathGeometry.Figures>
			<PathFigureCollection>
				<PathFigure StartPoint="10,30">
				<PathFigure.Segments>
					<PathSegmentCollection>
						<ArcSegment IsLargeArc="False" Point="50,30" RotationAngle="45" Size="10,10" SweepDirection="CounterClockwise" />
					</PathSegmentCollection>
				</PathFigure.Segments>
				</PathFigure>
			</PathFigureCollection>
		</PathGeometry.Figures>
		</PathGeometry>
	</Path.Data>
	</Path>

	<!-- abbreviated syntax : A (arc) -->
	<Path Stroke="Red" StrokeThickness="1" Data="M 60,30 A 10,10 45 0 0 100,30" />
	<Path Stroke="Green" StrokeThickness="1" Data="M 110,30 A 10,10 45 0 1 150,30" />
	<Path Stroke="Blue" StrokeThickness="1" Data="M 160,30 A 10,10 45 1 1 200,30" />
</Canvas>
