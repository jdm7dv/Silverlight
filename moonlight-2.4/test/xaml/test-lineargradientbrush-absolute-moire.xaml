     </LinearGradientBrush.GradientStops> 
    </LinearGradientBrush>
   </Rectangle.Fill>
  </Rectangle>
  <Rectangle Width="100" Height="100" Canvas.Top="230" Canvas.Left="10">
   <Rectangle.Fill>
