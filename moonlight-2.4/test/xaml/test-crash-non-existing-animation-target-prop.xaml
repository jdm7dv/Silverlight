<Canvas
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Width="100" Height="100">
	<Ellipse x:Name="ball" Fill="LightGray" Width="50" Height="50" Canvas.Left="25" Canvas.Top="25">
	<Ellipse.RenderTransform>
		<TransformGroup>
			<!-- <ScaleTransform ScaleX="1" ScaleY="1" CenterX="25" CenterY="25"/> --> <!-- cullprit -->
		</TransformGroup>
	</Ellipse.RenderTransform>
	<Ellipse.Triggers>
		<EventTrigger RoutedEvent="Ellipse.Loaded">
			<BeginStoryboard>
				<Storyboard x:Name="animation">
					<DoubleAnimationUsingKeyFrames
						Storyboard.TargetName="ball"
						Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
						AutoReverse="True" RepeatBehavior="Forever">
							<SplineDoubleKeyFrame Value="1.8" KeyTime="0:0:1" KeySpline="0.0,0.3 0.7,1.0" />
					</DoubleAnimationUsingKeyFrames>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Ellipse.Triggers>
	</Ellipse>
</Canvas>

