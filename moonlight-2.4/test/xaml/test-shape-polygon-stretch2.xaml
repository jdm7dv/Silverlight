<Canvas xmlns="http://schemas.microsoft.com/client/2007">
<!-- default == None -->
        <Polygon Stroke="Red" Fill="Green" StrokeThickness="5" Points="0,0
10,10, 50,10, 50,50 25,25"/>
        <Polygon Stroke="Blue" Width="75" Height="25" Canvas.Left="100" Fill="Green" StrokeThickness="5" Points="0,0
10,10, 50,10, 50,50 25,25"/>
        <Polygon Stroke="Orange" Width="75" Height="25"
Canvas.Top="50" Fill="Green" StrokeThickness="5" Points="0,0
10,10, 50,10, 50,50 25,25" Stretch="Fill"/>
        <Polygon Stroke="Purple" Width="75" Height="25" Canvas.Left="100"
Canvas.Top="50" Fill="Green" StrokeThickness="5" Points="0,0
10,10, 50,10, 50,50 25,25" Stretch="Uniform"/>
        <Polygon Stroke="Yellow" Width="75" Height="25"
Canvas.Top="100" Fill="Green" StrokeThickness="5" Points="0,0
10,10, 50,10, 50,50 25,25" Stretch="UniformToFill"/>
        <Polygon Stroke="Brown" Width="75" Height="25" Canvas.Left="100"
Canvas.Top="100" Fill="Green" StrokeThickness="5" StrokeDashArray="2" Points="0,0
10,10, 50,10, 50,50 25,25" Stretch="Fill"/>
