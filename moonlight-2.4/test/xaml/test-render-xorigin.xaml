<Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="20" Stroke="#f00"/>
	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="20" Stroke="#00f">
	   <Rectangle.RenderTransform>
	     <RotateTransform Angle="45"/>
   	   </Rectangle.RenderTransform>
	</Rectangle>

	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="100" Stroke="#f00"/>
	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="100" Stroke="#00f" RenderTransformOrigin="1,1">
	   <Rectangle.RenderTransform>
	     <RotateTransform Angle="45"/>
   	   </Rectangle.RenderTransform>
	</Rectangle>

	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="180" Stroke="#f00"/>
	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="180" Stroke="#00f" RenderTransformOrigin="0.5,0.5">
	   <Rectangle.RenderTransform>
	     <RotateTransform Angle="45"/>
   	   </Rectangle.RenderTransform>
	</Rectangle>

	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="260" Stroke="#f00"/>
	<Rectangle Height="40" Width="40" Canvas.Left="100" Canvas.Top="260" Stroke="#00f" RenderTransformOrigin="1.5,1.5">
	   <Rectangle.RenderTransform>
	     <RotateTransform Angle="45"/>
   	   </Rectangle.RenderTransform>
	</Rectangle>

</Canvas>
