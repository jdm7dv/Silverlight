<UserControl x:Class="NameTortureTest.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="1000" Height="500">

    <Grid>
      <Grid.RowDefinitions>
	<RowDefinition Height="Auto" />
	<RowDefinition Height="*" />
	<RowDefinition Height="10" />
      </Grid.RowDefinitions>

      <TextBlock Grid.Row="0" x:Name="status" />
      <TextBox Grid.Row="1" x:Name="log" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"/>
      <Grid x:Name="testArea" />
    </Grid>
</UserControl>
