<Canvas x:Class="PopupExample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300" Background="Orange">
  <Grid Canvas.Top="100" Canvas.Left="100" Background="Purple">
    <Grid.ColumnDefinitions>
        <ColumnDefinition />
        <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Border Grid.Column="0" x:Name="BorderOne"><Image Source="mono.png"/></Border>
    <Border Grid.Column="1" Background="Yellow" x:Name="BorderThree" Width="40" Height="40"/>
    <Border Grid.Column="2" Background="Blue" x:Name="BorderTwo" Width="30" Height="30"/>
  </Grid>
  <Grid Canvas.Top="150" Width="50" Height="33">
    <Rectangle Fill="Red"/>
    <Rectangle Fill="Blue" Width="22"/>
  </Grid>
</Canvas>

