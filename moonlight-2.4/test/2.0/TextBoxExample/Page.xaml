<Canvas x:Class="TextBoxExample.Page"
       xmlns="http://schemas.microsoft.com/client/2007"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Width="800" Height="600">

  <TextBox Canvas.Left="5" Canvas.Top="5" x:Name="txtTextBox" Width="640" Height="480" MaxLength="0" FontFamily="Arial Unicode MS"
   AcceptsReturn="true" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"/>
  <TextBlock Canvas.Left="650" Canvas.Top="5" x:Name="txtTextBlock" Width="640" Height="480" 
   TextWrapping="NoWrap" Text="This is a TextBlock mirror of the TextBox content"/>
  <Rectangle Canvas.Left="5" Canvas.Top="500" x:Name="rectSelection" Width="640" Height="480" Fill="white"/>
  <TextBlock Canvas.Left="5" Canvas.Top="500" x:Name="txtSelection" Text="This is the selected text"/>
  <TextBlock Canvas.Left="650" Canvas.Top="500" x:Name="txtSelectionState" Text=""/>
</Canvas>
