<UserControl x:Class="ControlsSample.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:SilverlightControls;assembly=SilverlightControls"
    xmlns:primitives="clr-namespace:SilverlightControls.Primitives;assembly=SilverlightControls"
    Width="400" Height="300">
    <StackPanel x:Name="LayoutRoot" Background="White">
        <controls:Button Content="A" />
        <controls:CheckBox Content="B" />
        <controls:HyperlinkButton Content="C" NavigateUri="http://go.microsoft.com/fwlink/?LinkID=131993" />
        <controls:ProgressBar Minimum="0.0" Maximum="1.0" Height="10.0" Value="0.5" />
        <StackPanel>
            <controls:RadioButton Content="D" />
            <controls:RadioButton Content="E" />
            <controls:RadioButton Content="F" />
        </StackPanel>
        <controls:Slider Minimum="0.0" Maximum="1.0" Value="0.5" />
        <primitives:ScrollBar Orientation="Horizontal" />
    </StackPanel>
</UserControl>
